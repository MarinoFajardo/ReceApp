<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/card_preview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linear_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imagen_receta"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="@string/imagen_receta"
                android:layout_gravity="top|left"
                tools:background="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center|center_horizontal"
                >
                <TextView
                    android:id="@+id/dificultad_receta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    tools:text="Dificultad"
                    />

                <TextView
                    android:id="@+id/duracion_receta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    tools:text="DuraciÃ³n"
                    app:drawableStartCompat="@drawable/baseline_access_time_24"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tipo_receta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    tools:text="Tipo"
                    android:drawableStart="@drawable/pot_steam"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/alergenos_receta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Alergenos"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/nombre_receta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Nombre Receta"
            android:layout_gravity="center_horizontal"
            android:singleLine="false"
            android:maxLines="3"
            android:textAlignment="center"
            />

       </LinearLayout>

</androidx.cardview.widget.CardView>